apiVersion: security.istio.io/v1beta1
kind: AuthorizationPolicy
metadata:
  name: second-brain
  namespace: default
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: second-brain
  action: ALLOW
  rules:
    - when:
        - key: request.auth.claims[realm_access][roles]
          values: ["${role}"]
